<div class="container">
    <h1>Your Todo List</h1>

    <form class="addUI" action="/todo" method="post">
        <div class="exit">X</div>
        <h3>Add Todo</h3>
        <label for="text">Text:</label>
        <input type="text" name="text" id="text" value="">
        <button type="submit">Add</button>
    </form>

    <form class="updateTodo">
        <div class="exitUpdate">X</div>
        <h3>Update Todo</h3>
        <label for="newText">Text:</label>
        <input type="text" name="text" id="newText" value="">
        <button type="submit">Add</button>
    </form>

    <div class="todo">
        <div class="btn-group">
            <button class="add">Add Todo</button>
            <button class="refresh">Refresh Todo</button>
        </div>
        <div class="todoUI">
            <table>
                <thead>
                    <th>Text</th>
                    <th>Settings</th>
                </thead>
                <tbody class="todos">
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="script/todo.js"></script>